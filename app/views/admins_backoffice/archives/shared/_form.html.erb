<%# <h1>Editando</h1> %>


<div class="x_panel">
    <div class="x_title">
        <h1><%=action_message%></h1>
        
        <div class="clearfix"></div>
    </div>
    <%if @archive.errors.any?%>
        <div class="alert alert-danger alert-dismissible " role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span>
            </button>
            <ul>
               <% @archive.errors.full_messages.each do |message| %>
                 <li><%=message%></li>
               <%end%>
            </ul>
        </div>
    <%end%>
    <div class="x_content">

        <!-- start form for validation -->
        
        <%= form_with(model: [ :admins_backoffice, @archive ], local: true) do |form| %>
            
           
            <%=form.label :title%>
            <%=form.text_field :title, class:"form-control" %>
          
            <%=form.label :file%>
            <%=form.file_field :file, class:"form-control" %>
           
            <%=form.label :description%>
            <%=form.text_field :description, class:"form-control" %>
           
            <br>
            <button type='submit' class="btn btn-primary">Salvar</button>
            <%=link_to 'Voltar', admins_backoffice_archives_path, class:"btn btn-primary"%>

        <%end%>
        <!-- end form for validations -->

    </div>
</div>